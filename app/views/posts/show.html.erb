<h2>スケジュール詳細</h2>

<table>
   <tr>
     <th>タイトル</th>
     <td><%= @post.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @post.str_date %></td>
   </tr>
   <tr>
     <th>投稿日時</th>
     <td><%= @post.end_date %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td>
     <% if @post.all_day == true %>
     ◯
     <% else @post.all_day == false %>
     <% end %>
     </td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @post.memo %></td>
    </tr>
 </table>

 <ul class="link_to">
   <li><%= link_to "スケジュール一覧に戻る",posts_path %></li>
   <li><%= link_to "スケジュールを編集する",edit_post_path %></li>
   <li><%= link_to "スケジュールを削除する",post_path, method: :delete, data:{confirm:"本当に削除しますか"} %></li>
</ul>