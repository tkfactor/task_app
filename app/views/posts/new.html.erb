<h2>スケジュール新規作成</h2>

<% if flash[:failure] %>
   <p class="failure_msg"><%= flash[:failure] %></p>
 <% end %>

 <%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
    <table>
    <tr>
    <th><%= f.label :title,"タイトル"%></th>
    <td><%= f.text_field :title %></td>
    </tr>

    <tr>
    <th><%= f.label :str_date,"開始日"%></th>
    <td><%= f.date_field :str_date %></td>
    </tr>

    <tr>
    <th><%= f.label :end_date,"終了日"%></th>
    <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
    <th><%= f.label :all_day,"終日"%></th>
    <td><%= f.check_box :all_day %></td>
    </tr>

    <tr>
    <th><%= f.label :memo,"スケジュールメモ"%></th>
    <td><%= f.text_area :memo %></td>
    </tr>
    </table>

    <div>
     <ul class ="link_to">
       <li><%= f.submit "スケジュールを新規登録する"%></li>
       <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
     </ul>
   </div>

    <% end %>
